# Environment variables for RAG-ing application
# Copy this file to .env and fill in your actual values

# Azure OpenAI Configuration (recommended)
# RAG-ing Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# Azure OpenAI Configuration (Primary LLM Provider - GPT-4o Nano)
# ============================================================================
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
# Deployment name for GPT-5 nano model
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-nano

# ============================================================================
# Fallback LLM Providers (Optional)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# Confluence Integration (Multi-Source Data Ingestion)
# ============================================================================
CONFLUENCE_BASE_URL=https://your-company.atlassian.net/wiki
CONFLUENCE_USERNAME=your.email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token_here

# ============================================================================
# JIRA Integration (Multi-Source Data Ingestion)
# ============================================================================
JIRA_URL=https://your-company.atlassian.net
JIRA_USER=your.email@company.com
JIRA_TOKEN=your_jira_api_token_here

# ============================================================================
# System Configuration (Optional)
# ============================================================================
# Logging level
LOG_LEVEL=INFO

# Data directories
DATA_DIR=./data
LOGS_DIR=./logs
VECTOR_STORE_DIR=./vector_store

# Model cache directory (for downloaded models)
MODELS_CACHE_DIR=./models_cache

# ============================================================================
# Development Settings (Optional)
# ============================================================================
# Set to 'development' for debug mode
ENVIRONMENT=production

# Enable debug features
DEBUG_MODE=false

# Custom model paths (advanced usage)
# CUSTOM_EMBEDDING_MODEL_PATH=/path/to/your/model
# CUSTOM_LLM_MODEL_PATH=/path/to/your/model

# Standard OpenAI API Key (alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# HuggingFace API Key (optional, for HuggingFace models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account.region.snowflakecomputing.com
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=your_role

# Confluence Configuration
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your_email@domain.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

# Medium Configuration
MEDIUM_USER_ID=@your_medium_username
MEDIUM_RSS_URL=https://medium.com/feed/@your_username

# Twitter API Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Application Settings
DEBUG=false
APP_NAME=RAG-ing